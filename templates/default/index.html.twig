{% extends "base.html.twig" %}

{% block body %}
	{% if username != null %}
	<div class="row">
		<div class="col-lg-12">
			Ciao, {{ username }}! Cosa vuoi fare oggi?
		</div>	
	</div> 
	<div class="row">
		<div class="col-lg-4">1</div>
		<div class="col-lg-4">2</div>
		<div class="col-lg-4">3</div>
	</div>
	<div class="row">
		<div class="col-lg-4">4</div>
		<div class="col-lg-4">5</div>
		<div class="col-lg-4">6</div>
	</div>	
	{% endif %}


	{% if username == null %}
	<div class="row">
		<div class="col-lg-12">	
			<a href="/login" class="btn btn-info">Accedi</a>	
		</div>	
	</div> 			
	{% endif %}
