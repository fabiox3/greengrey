{% extends "base.html.twig" %}

{% block title %}GreenGrey :: Home{% endblock %}

{% block body %}
	{% if username != null %}
	<div class="container text-center">
		<br><br>
		<h2 class="welcome">COSA VUOI FARE OGGI?</h2>
		<div class="row">
			<div class="col-lg-4">
				<div class="panel panel-default">
				  	<div class="panel-body">
				  		<i class="fas fa-map-marker-alt fa-3x"></i>
				  	</div>
				</div>
			</div>
			<div class="col-lg-4">
				<div class="panel panel-default">
				  	<div class="panel-body">
				  		<i class="fas fa-list-ol fa-3x"></i>
				  	</div>
				</div>
			</div>
			<div class="col-lg-4">
				<div class="panel panel-default">
				  	<div class="panel-body">
				  		<i class="fas fa-sun fa-3x"></i>
				  	</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-4">
				<div class="panel panel-default">
				  	<div class="panel-body">
				  		<a href="/trees">Geolocalizzati nell'oliveto</a>
				  	</div>
				</div>
			</div>
			<div class="col-lg-4">
				<div class="panel panel-default">
				  	<div class="panel-body">
				  		<a href="/treeslist">Consulta la mappatura degli alberi</a>
				  	</div>
				</div>
			</div>
			<div class="col-lg-4">
				<div class="panel panel-default">
				  	<div class="panel-body">
				  		<a href="/meteo">Consulta il meteo</a>
				  	</div>
				</div>
			</div>				
		</div>	
	</div>
	{% endif %}


	{% if username == null %}
	<div class="row">
		<div class="col-lg-12">	
			<a href="/login" class="btn btn-info">Accedi</a>	
		</div>	
	</div> 			
	{% endif %}
{% endblock %}




